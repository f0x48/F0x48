client.placeholder      #211E2F  #211E2F    #FFFFFF  #140C04    #3D3757 

client.background       #D37F9E

bar {
  strip_workspace_numbers yes
  status_command SCRIPT_DIR=~/FDocument/GitClones/i3blocks-contrib i3blocks
  #status_command i3status
  colors {
    background #211E2F 
